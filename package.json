{
  "name": "berry",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "css:release": "sass --load-path=node_modules src/css/base.scss:public/css/base.min.css --style=compressed",
    "js:release": "shadow-cljs release app",
    "release": "npm run css:release && npm run components && npm run postcss:release && npm run js:release",
    "postcss:build": "npx cross-env TAILWIND_MODE=build postcss src/css/global.css -o ./public/css/output.css --verbose",
    "postcss:watch": "npx cross-env TAILWIND_MODE=watch postcss src/css/global.css -o ./public/css/output.css --verbose -w",
    "postcss:release": "npx cross-env NODE_ENV=production postcss src/css/global.css -o ./public/css/output.css --verbose",
    "components": "babel ./src/js/components/ --extensions \".ts,.tsx\" --out-dir ./src/gen/components/ ",
    "components:watch": "npm run components --watch",
    "css:watch": "sass --load-path=node_modules --watch src/css/base.scss:public/css/base.min.css",
    "watch": "npm run components && concurrently \"npm run postcss:watch\" \"npm run css:watch\"  \"npm run components:watch\" \"shadow-cljs watch app\" "
  },
  "dependencies": {
    "@babel/runtime": "^7.15.4",
    "@chakra-ui/react": "^1.8.6",
    "@tailwindcss/forms": "^0.5.3",
    "html-react-parser": "^5.0.11",
    "markdown-clj": "^1.10.3",
    "npm-run-all": "^4.1.5",
    "postcss-focus-visible": "^8.0.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-refresh": "^0.13.0",
    "react-router-dom": "^6.8.0",
    "tailwind-merge": "^1.12.0",
    "tailwindcss-animate": "^1.0.5",
    "clsx": "^1.2.1",
    "tailwindcss": "^3.3.2"
  },
  "devDependencies": {
    "@babel/cli": "^7.15.4",
    "@babel/core": "^7.15.0",
    "@babel/plugin-proposal-class-properties": "^7.14.5",
    "@babel/plugin-proposal-object-rest-spread": "^7.15.6",
    "@babel/plugin-proposal-private-methods": "^7.14.5",
    "@babel/plugin-proposal-private-property-in-object": "^7.15.4",
    "@babel/plugin-transform-runtime": "^7.15.0",
    "@babel/preset-env": "^7.15.6",
    "@babel/preset-react": "^7.14.5",
    "@babel/preset-typescript": "^7.15.0",
    "babel-loader": "^8.2.2",
    "babel-plugin-module-resolver": "^4.1.0",
    "babel-plugin-styled-components": "^1.13.2",
    "babel-plugin-transform-imports": "^2.0.0",
    "concurrently": "^6.2.1",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.24",
    "postcss-cli": "^10.1.0",
    "postcss-loader": "^7.3.3",
    "postcss-preset-env": "^8.5.0",
    "sass": "^1.57.1",
    "shadow-cljs": "^2.20.20"
  }
}
